/* Reset and Base Styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: Arial, Helvetica, sans-serif;
  background-color: #4a4a4a;
  min-height: 100vh;
  overflow-x: auto;
}

/* Page Wrapper - Fixed desktop width */
.page-wrapper {
  width: 1024px;
  min-width: 1024px;
  margin: 0 auto;
  background-color: #ffffff;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
}

/* Header Section */
.header {
  background-color: #ffffff;
  border-radius: 15px 15px 0 0;
  overflow: hidden;
  margin: 8px 8px 0 8px;
}

.header-content {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  padding: 10px 15px;
  border-radius: 15px 15px 0 0;
}

.logo-section {
  flex: 0 0 auto;
  margin-right: 15px;
}

.logo {
  height: 90px;
  width: auto;
  display: block;
}

.banner-section {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.banner {
  height: 90px;
  width: auto;
  display: block;
}

/* Navigation Bar */
.navbar {
  background: linear-gradient(180deg, #f8f8f8 0%, #e8e8e8 100%);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 20px;
  border-bottom: 2px solid #d0d0d0;
  margin: 0 8px;
}

.nav-left {
  display: flex;
  align-items: center;
}

.home-link {
  display: flex;
  align-items: center;
  gap: 8px;
  text-decoration: none;
  color: #000;
  font-weight: bold;
  font-size: 14px;
  padding: 6px 12px;
  border-radius: 5px;
  transition: background-color 0.2s;
}

.home-link:hover {
  background-color: rgba(255, 255, 255, 0.5);
}

.home-icon {
  width: 32px;
  height: 32px;
  color: #ff6600;
  filter: drop-shadow(1px 1px 2px rgba(0, 0, 0, 0.3));
}

.nav-right {
  display: flex;
  align-items: center;
  gap: 10px;
}

.contact-text {
  font-weight: bold;
  font-size: 14px;
  color: #000;
  margin-right: 5px;
}

.contact-icon {
  width: 24px;
  height: 24px;
  color: #333;
}

.phone-icon {
  color: #4a4a4a;
}

.email-icon {
  color: #4a4a4a;
}

/* Main Content */
.main-content {
  padding: 20px 30px;
  background-color: #ffffff;
  margin: 0 8px;
}

.page-title {
  text-align: center;
  font-size: 24px;
  font-weight: bold;
  color: #000;
  margin-bottom: 25px;
  letter-spacing: 0.5px;
}

/* Button Grid */
.button-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 15px 20px;
  margin-bottom: 30px;
  max-width: 900px;
  margin-left: auto;
  margin-right: auto;
}

.fee-button {
  padding: 18px 20px;
  border: 2px solid;
  border-radius: 8px;
  font-size: 16px;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.2s ease;
  text-align: center;
  min-height: 70px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-text {
  line-height: 1.4;
}

.fee-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
}

.fee-button:active {
  transform: translateY(0);
}

/* Button Color Variants */
.green-btn {
  background-color: #00a000;
  color: #ffffff;
  border-color: #008800;
}

.green-btn:hover {
  background-color: #00bb00;
}

.gray-btn {
  background-color: #888888;
  color: #ffffff;
  border-color: #666666;
}

.gray-btn:hover {
  background-color: #999999;
}

.light-blue-btn {
  background-color: #d0d8ff;
  color: #0040c0;
  border-color: #a0b0e0;
}

.light-blue-btn:hover {
  background-color: #e0e8ff;
}

.dark-blue-btn {
  background-color: #0050d0;
  color: #ffffff;
  border-color: #003090;
}

.dark-blue-btn:hover {
  background-color: #0060e0;
}

/* Info Sections */
.info-section {
  margin-bottom: 25px;
  background-color: #f8f8f8;
  padding: 15px 20px;
  border-radius: 6px;
  border: 1px solid #e0e0e0;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  color: #000;
  margin-bottom: 12px;
  letter-spacing: 0.3px;
}

.red-title {
  color: #cc0000;
}

.info-list {
  list-style-position: outside;
  padding-left: 25px;
}

.info-list li {
  margin-bottom: 12px;
  line-height: 1.6;
  font-size: 14px;
  color: #333;
}

.info-text {
  font-size: 14px;
  line-height: 1.7;
  color: #333;
  margin-bottom: 10px;
}

.info-text:last-child {
  margin-bottom: 0;
}

.highlight-red {
  color: #cc0000;
  font-weight: bold;
}

.highlight-black {
  font-weight: bold;
  color: #000;
}

/* Bottom Buttons - Special Layout */
.bottom-buttons {
  grid-template-columns: 1fr 1fr;
  margin-top: 30px;
  margin-bottom: 30px;
}

.bottom-buttons .fee-button:first-child {
  grid-column: 1 / 2;
}

.bottom-buttons .fee-button:nth-child(2) {
  grid-column: 1 / 2;
}

.bottom-buttons .fee-button:nth-child(3) {
  grid-column: 2 / 3;
  grid-row: 1 / 2;
}

.bottom-buttons .fee-button:nth-child(4) {
  grid-column: 1 / 2;
}

.bottom-buttons .fee-button:nth-child(5) {
  grid-column: 2 / 3;
}

/* Footer */
.footer {
  background-color: #f5f5f5;
  text-align: center;
  padding: 20px;
  margin: 0 8px 8px 8px;
  border-radius: 0 0 15px 15px;
  border-top: 2px solid #e0e0e0;
}

.footer p {
  margin: 0;
  font-size: 14px;
  color: #333;
}

.footer strong {
  font-weight: bold;
  color: #000;
}

/* Mobile Viewport Override - Keep desktop layout */
@media screen and (max-width: 1024px) {
  body {
    overflow-x: auto;
  }
  
  .page-wrapper {
    min-width: 1024px;
  }
}